{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="bg-teal-100">
            {{ message }}
        </div>
    {% endfor %}
    {% form_theme form 'tailwind_2_layout.html.twig' %}
    <div class="w-5/12 mx-auto p-5">
        <div>
            {{ form_start(form) }}
                {{ form_row(form.fullName, {
                    row_class: 'mb-6',
                    widget_class : 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500',
                    label_class : "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                }) }}
                {{ form_row(form.email, {
                    row_class: 'mb-6',
                    widget_class : 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500',
                    label_class : "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                }) }}
                {{ form_row(form.subject, {
                    row_class: 'mb-6',
                    widget_class : 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500',
                    label_class : "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                }) }}
                {{ form_row(form.message, {
                    row_class: 'mb-6',
                    widget_class : 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500',
                    label_class : "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                }) }}
            <input type="submit" value="Envoyer ma demande" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
